<div class="container">
  <h1 class="title">Edit Board</h1>

  <ul>
    <% @board.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>

  <%= form_with(model: @board, url: board_path(@board), method: 'put', local: true, html: { class: 'form' } ) do |f| %>
    <div class="box">
      <div>
        <%= f.label :name %>
      </div>
      <div>
        <%= f.text_field :name, class: 'text' %>
      </div>
      <div>
        <%= f.label :description %>
      </div>
      <div>
        <%= f.text_area :description %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit 'Submit', class: 'btn-primary' %>
    </div>
  <% end %>
</div>