<div class="container-board">
  <h1 class="title">All Boards</h1>

  <% @boards.each do |board| %>
    <%= link_to board_path(board) do %>
      <div class="board">
        <div class="board_content">
          <div class="board_detail">
            <h2 class="board_name">
              <%= board.name %>
            </h2>
            <p class="board_description">
              <%= board.description %>
            </p>
          </div>
          <% if user_signed_in? && current_user.has_written?(board) %>
            <div class="board_content_actions">
              <div class="dropdown">
                <%= image_tag 'actions.svg', class: 'dropbtn' %>
                <div class="dropdown-content mini">
                  <%= link_to 'Edit', edit_board_path(board) %>
                  <a href="#">Delete</a>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="board_avatar">
          <%= image_tag board.user.avatar_image %>
        </div>
      </div>
    <% end %>
  <% end %>

  <% if user_signed_in? %>
    <%= link_to new_board_path, class: 'add-board' do %>
      + Add new board
    <% end %>
  <% end %>
</div>