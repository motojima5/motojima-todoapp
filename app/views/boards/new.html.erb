<div class="container">
  <h1 class="title">New Board</h1>

  <%= form_with(model: @board, url: boards_path, method: 'post', local: true, html: { class: 'form' } ) do |f| %>
    <div class="box">
      <div>
        <%= f.label :name %>
      </div>
      <div>
        <%= f.text_field :name, class: 'text' %>
      </div>
      <div>
        <%= f.label :description %>
      </div>
      <div>
        <%= f.text_area :description %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit 'Submit', class: 'btn-primary' %>
    </div>
  <% end %>
</div>