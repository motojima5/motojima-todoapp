<div class="container-board">
  <h1 class="title">
    <%= @board.name %>
  </h1>

  <% @tasks.each do |task| %>
    <%= link_to board_task_path(task) do %>
      <div class="task">
        <div class="task_content">
          <h2 class="task_name"><%= task.title %></h2>
          <p class="task_description"><%= task.content %></p>
        </div>
        <div class="task_detail">
          <div class="task_avatar">
            <%= image_tag task.user.avatar_image %>
          </div>

          <div class="task_comment">
            <span>23</span>
            <%= image_tag 'message.svg' %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>

  <%= link_to new_board_task_path(@board), class: 'add-board' do %>
    + Add new card
  <% end %>
</div>