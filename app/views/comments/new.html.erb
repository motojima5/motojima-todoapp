<div class="container">
  <h1 class="title">New Comment</h1>

  <ul>
    <% @comment.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>

  <%= form_with(model: @comment, url: board_task_comments_path(@comment.task), local: true, html: { class: 'form' } ) do |f| %>
    <div class="box">
      <div>
        <%= f.text_area :content %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit 'Submit', class: 'btn-primary' %>
    </div>
  <% end %>
</div>